<div class="wrapper">
    <div class="container article-poster">
        <div class="col-md-4">
            <% if @article.photo? %>
              <%= cl_image_tag @article.photo.path, width: 400, height: 500, crop: :fill %>
            <% end %>
        </div>
        <div class="col-md-4 col-md-offset-1">
            <div class="article-info">
                <h1><%= @article.headline %></h1>
                <br>
                <p><strong>Body:</strong></p>
                <p><%= @article.body %></p>
                <br>
            </div>
        </div>
    </div>
</div>



